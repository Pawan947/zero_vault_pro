<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Two-Factor Authentication</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    :root {
      --primary: #f8fafc;
      --background: #0f172a;
      --surface: #1e293b;
      --text: #f8fafc;
      --text-muted: #94a3b8;
    }

    body {
      background-color: var(--background);
      color: var(--text);
      font-family: 'Segoe UI', sans-serif;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0;
    }

    .container {
      background: var(--surface);
      padding: 2rem;
      border-radius: 1rem;
      text-align: center;
      max-width: 400px;
      width: 100%;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    h1 {
      margin-bottom: 1rem;
    }

    .btn {
      background: #4f46e5;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      cursor: pointer;
      font-size: 1rem;
      width: 100%;
      margin-top: 1rem;
    }

    .btn:hover {
      opacity: 0.9;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1><i class="fas fa-shield-alt"></i> Verify Identity</h1>
    <p style="color: var(--text-muted); margin-bottom: 2rem;">
      Please complete the second step of verification using your Passkey.
    </p>

    <button id="btnWebAuthn" class="btn">
      Authenticate with Passkey
    </button>
  </div>

  <script src="https://unpkg.com/@simplewebauthn/browser/dist/bundle/index.umd.min.js"></script>
  <script>
    const { startAuthentication } = SimpleWebAuthnBrowser;

    const btn = document.getElementById('btnWebAuthn');

    async function authenticate() {
      try {
        btn.disabled = true;
        btn.textContent = "Verifying...";

        const resp = await fetch('/api/webauthn/login-options');
        const opts = await resp.json();

        if (opts.error) throw new Error(opts.error);

        const asseResp = await startAuthentication({ optionsJSON: opts });

        const verificationResp = await fetch('/api/webauthn/login-verify', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(asseResp),
        });

        const verificationJSON = await verificationResp.json();

        if (verificationJSON && verificationJSON.verified) {
          window.location.href = '/';
        } else {
          alert('Verification failed: ' + (verificationJSON.error || 'Unknown error'));
          btn.disabled = false;
          btn.textContent = "Authenticate with Passkey";
        }
      } catch (err) {
        console.error(err);
        alert('Authentication failed: ' + err.message);
        btn.disabled = false;
        btn.textContent = "Authenticate with Passkey";
      }
    }

    btn.addEventListener('click', authenticate);

    // Auto-trigger on load for convenience
    // authenticate(); 
  </script>
</body>

</html>